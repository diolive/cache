@model CreateBudgetVM

@{
    ViewData["Title"] = "Create";
}

@section scripts {
    <partial name="_ValidationScriptsPartial" />
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Budget</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Currency" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Currency" class="form-control" asp-items="ViewBag.Currency"></select>
                <span asp-validation-for="Currency" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-area="" asp-controller="Home" asp-action="Index">Back to Home page</a>
</div>