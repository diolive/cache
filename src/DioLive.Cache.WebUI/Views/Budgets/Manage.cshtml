@model ManageBudgetVM

@{
    ViewData["PageTitle"] = "Edit";
}

@section scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        var $removeBudgetName = $("#removeBudgetName"),
            $removeBudgetButton = $("#removeBudgetButton");

        $removeBudgetName.change(() => {
            if ($removeBudgetName.val() === "@Model.Name") {
                $removeBudgetButton.removeClass("disabled");
            }
            else {
                $removeBudgetButton.addClass("disabled");
            }
        });
    </script>
}

<h2>Manage <strong>@Model.Name</strong></h2>

<div class="card">
    <div class="card-header">Basic properties</div>
    <div class="card-body">
        <form asp-action="Manage">
            <div class="form-horizontal">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Name" class="col-md-2 control-label"></label>
                    <div class="col-md-6">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <input type="submit" value="Save changes" class="btn btn-default col-md-2" />
                </div>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-header">Shares</div>
    <div class="card-body">
        <vc:budget-sharing></vc:budget-sharing>
    </div>
</div>

<div class="card bg-danger text-white">
    <div class="card-header">Remove budget</div>
    <div class="card-body">
        <div class="form-group">
            <label class="col-md-4 control-label">Reenter name "@Model.Name" (without quotes)</label>
            <div class="col-md-4">
                <input type="text" id="removeBudgetName" class="form-control" />
            </div>
            <a asp-area="" asp-controller="Budgets" asp-action="Delete" id="removeBudgetButton" class="btn btn-danger col-md-2 disabled">Delete budget</a>
        </div>
    </div>
</div>

<div>
    <a asp-area="" asp-controller="Home" asp-action="Index">Back to Home page</a>
</div>