@model ShareVM

<form asp-area="" asp-controller="Budgets" asp-action="Share" method="post">
    <input type="hidden" asp-for="BudgetId" />
    <div class="row">
        <div class="form-group col-md-5">
            <label>with</label>
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label>&nbsp;</label>
            <select asp-for="Access" asp-items="ViewBag.Access" class="form-control"></select>
        </div>
        <div class="form-group col-md-2">
            <label>&nbsp;</label>
            <button class="btn btn-secondary form-control">Share</button>
        </div>
    </div>
</form>