@inject ICurrentContext CurrentContext
<script>
    CFG.chartsPieDataUrl = '@Url.Action("PieData", "Charts")';
    CFG.chartsSunburstDataUrl = '@Url.Action("SunburstData", "Charts")';
    CFG.chartsStatDataUrl = '@Url.Action("StatData", "Charts")';
    CFG.currency = '@Html.Raw(CurrentContext.Budget?.Currency)';
</script>
<environment names="Development">
    <script src="~/js/lib/d3.js" asp-append-version="true"></script>
    <script src="~/js/pieChart.js" asp-append-version="true"></script>
    <script src="~/js/sunburstChart.js" asp-append-version="true"></script>
    <script src="~/js/statChart.js" asp-append-version="true"></script>
    <script src="~/js/charts.js" asp-append-version="true"></script>
</environment>
<environment names="Staging,Production">
    <script src="~/js/lib/d3.min.js" asp-append-version="true"></script>
    <script src="~/js/pieChart.min.js" asp-append-version="true"></script>
    <script src="~/js/sunburstChart.min.js" asp-append-version="true"></script>
    <script src="~/js/statChart.min.js" asp-append-version="true"></script>
    <script src="~/js/charts.min.js" asp-append-version="true"></script>
</environment>