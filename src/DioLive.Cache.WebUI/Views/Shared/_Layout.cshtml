@using DioLive.Cache.Common
@inject IViewLocalizer Localizer
@inject ApplicationOptions Options
@inject ICurrentContext CurrentContext

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>Caché • @ViewData["PageTitle"]</title>

    <link rel="icon" href="~/img/cache-favicon.png" />

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css" integrity="sha256-siyOpF/pBWUPgIcQi17TLBkjvNgNQArcmwJB8YvkAgg=" crossorigin="anonymous" />


    <environment names="Development">
        <link rel="stylesheet" href="~/css/bootstrap-slider.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/bootstrap-colorpicker.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/bootstrap-override.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/d3charts.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/open-iconic-bootstrap.css" asp-append-version="true">
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">Caché</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="navbar-nav mr-auto">
                @if (User.Identity.IsAuthenticated && CurrentContext.BudgetId.HasValue)
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Purchases" asp-action="Index">@Localizer["Purchases"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Categories" asp-action="Index">@Localizer["Categories"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Charts" asp-action="Index">@Localizer["Charts"]</a>
                    </li>
                }
            </ul>
            <ul class="navbar-nav ml-auto mt-2 mt-sm-0">
                <vc:login></vc:login>
            </ul>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="row">
            <span>&copy; 2016−20@(Options.ApplicationVersion.Substring(0, 2)) DioLive Studio &mdash; Caché (version @Options.ApplicationVersion)</span>
            <div class="ml-auto">
                <vc:switch-language></vc:switch-language>
            </div>
        </footer>
    </div>

    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js" integrity="sha256-bqVeqGdJ7h/lYPq6xrPv/YGzMEb6dNxlfiTUHSgRCp8=" crossorigin="anonymous"></script>

    <environment names="Development">
        <script src="~/js/fetchApi.js" asp-append-version="true"></script>
        <script src="~/js/switchLocale.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/js/fetchApi.min.js" asp-append-version="true"></script>
        <script src="~/js/switchLocale.min.js" asp-append-version="true"></script>
    </environment>

    <script>
        var CFG = {
            homePageUrl: "@Url.Action("Index", "Home")",
            switchLocaleUrl: "@Url.Action("SwitchLocale", "OptionsApi")"
        };
    </script>
    @await RenderSectionAsync("scripts", false)
</body>
</html>