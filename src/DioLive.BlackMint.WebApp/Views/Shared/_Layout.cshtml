@using System.Reflection
@using DioLive.BlackMint.WebApp.Extensions
@{
    string displayName = Context.GetCurrentUser()?.DisplayName ?? "guest";
    string version = Assembly.GetEntryAssembly().GetCustomAttribute<AssemblyInformationalVersionAttribute>().InformationalVersion;
}
<!DOCTYPE html>
<html>
<head>
    <!-- Standard Meta -->
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

    <!-- Site Properties -->
    <title>Black mint · @ViewData["PageTitle"]</title>

    <environment names="Development">
        <link rel="stylesheet" href="~/lib/semantic.min.css"/>
        <link rel="stylesheet" href="~/css/site.css"/>
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/semantic-ui/2.2.13/semantic.min.css"
              asp-fallback-href="~/lib/semantic.min.css"
              asp-fallback-test-class="ui button" asp-fallback-test-property="cursor" asp-fallback-test-value="pointer"/>
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true"/>
    </environment>
    @await RenderSectionAsync("styles", false)
</head>
<body>
<div class="ui container vertical-streight">
    <div id="TopMenu" class="ui top inverted menu">
        <div class="ui responsive container">
            <div class="ui inverted huge header">
                <i class="ui leaf icon"></i>
                <div class="content">BLACK MINT</div>
            </div>
            <div class="right menu">
                <div>
                    <a class="ui teal button">Log in</a>
                </div>
                <div>
                    <a class="ui brown button">Sign Up</a>
                </div>
                <div>
                    <a class="ui red button" asp-action="Logout" asp-controller="Account">Log out</a>
                </div>
            </div>
        </div>
    </div>
    <div class="ui inverted segment main-segment">
        @if (User.Identity.IsAuthenticated)
        {
            <li>
                <a asp-controller="Account" asp-action="Profile">Hello @displayName!</a>
            </li>
            <li>
                <a asp-controller="Account" asp-action="Logout">Logout</a>
            </li>
        }
        else
        {
            <li>
                <a asp-controller="Account" asp-action="Login">Login</a>
            </li>
        }
        @RenderBody()
    </div>
</div>
<div id="Footer" class="ui bottom fixed text menu">
    <div class="header item">
        <i class="ui leaf icon"></i>
        Hello @(User.Identity.IsAuthenticated ? displayName : "guest")
    </div>
    <div class="item">© 2017 — DioLive Studio</div>
    <div class="right item">@version</div>
</div>
<environment names="Development">
    <script src="~/lib/jquery.min.js"></script>
    <script src="~/lib/semantic.min.js"></script>
</environment>
<environment names="Staging,Production">
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.2.1.min.js"
            asp-fallback-src="~/lib/jquery.min.js"
            asp-fallback-test="window.jQuery">
    </script>
    <script src="https://cdn.jsdelivr.net/semantic-ui/2.2.13/semantic.min.js"
            asp-fallback-src="~/lib/semantic.min.js"
            asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.site">
    </script>
</environment>
@await RenderSectionAsync("scripts", false)
</body>
</html>