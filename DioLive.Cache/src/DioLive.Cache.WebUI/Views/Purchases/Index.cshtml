@model IEnumerable<Purchase>

@{
    ViewData["PageTitle"] = "Index";
}

@section scripts {
    @await Html.PartialAsync("_TooltipsScriptsPartial")
}

<header class="h2">
    <span>@ViewData["BudgetName"] <a asp-area="" asp-controller="Budgets" asp-action="Manage"><span class="glyphicon glyphicon-cog" title="Manage"></span></a></span>
    <span class="h6 pull-right">Author: <span class="glyphicon glyphicon-user"></span> @ViewData["BudgetAuthor"]</span>
</header>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shop)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
                <a asp-area="" asp-controller="Categories" asp-action="Index" title="Edit categories">
                    <i class="glyphicon glyphicon-cog"></i>
                </a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var group in Model.GroupBy(m => m.Date))
        {
            <tr class="warning">
                <th></th>
                <th>
                    @Html.DisplayFor(modelItem => group.First().Date)
                </th>
                <th>
                    @string.Format(Purchase.CostFormat, group.Sum(g => g.Cost))
                </th>
                <th colspan="2"></th>
            </tr>
            @foreach (var item in group)
            {
                <tr>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">
                            <i class="glyphicon glyphicon-edit"></i>
                        </a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                        @if (item.Comments != null)
                        {
                            <i class="glyphicon glyphicon-comment text-info" data-toggle="tooltip" data-placement="bottom" title="@item.Comments"></i>
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cost)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Shop)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.Name)
                    </td>
                </tr>
            }
        }
    </tbody>
</table>