@{
    string culture = System.Globalization.CultureInfo.CurrentUICulture.Name;
}

<script>
    CFG.dateFormat = 'yyyy-mm-dd';
    CFG.culture = '@culture';
</script>
<environment names="Development">
    <script src="~/js/lib/bootstrap-datepicker.js"></script>
</environment>
<environment names="Staging,Production">
    <script src="~/js/lib/bootstrap-datepicker.min.js"></script>
</environment>

@if (!string.Equals(culture, "en-US", StringComparison.CurrentCultureIgnoreCase))
{
    <script src="~/js/lib/locales/bootstrap-datepicker.@(culture).min.js"></script>
}

<environment names="Development">
    <script src="~/js/enableDatepickers.js"></script>
</environment>
<environment names="Staging,Production">
    <script src="~/js/enableDatepickers.min.js"></script>
</environment>